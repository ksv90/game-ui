{
  "extends": "./node_modules/@ksv90/tools/packs/typescript/tsconfig.json",
  "include": ["."],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "baseUrl": ".",
    "types": ["vitest/globals", "@testing-library/jest-dom"],
    "skipLibCheck": true,
    "paths": {
      "@ui/helpers": ["./src/helpers"],
      "@ui/components": ["./src/components"],
      "@ui/providers": ["./src/providers"],
      "@ui/schemes": ["./src/schemes"]
    }
  }
}
