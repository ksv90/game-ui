{
  "extends": "./node_modules/@ksv90/tools/packs/typescript/tsconfig.json",
  "include": ["."],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "baseUrl": ".",
    "types": ["vitest/globals", "@testing-library/jest-dom"],
    "skipLibCheck": true,
    "paths": {
      "@game-ui/base": ["./src/base"],
      "@game-ui/components": ["./src/components"],
      "@game-ui/helpers": ["./src/helpers"],
      "@game-ui/mediators": ["./src/mediators"],
      "@game-ui/providers": ["./src/providers"],
      "@game-ui/schemes": ["./src/schemes"]
    },
    "plugins": [
      { "transform": "typescript-transform-paths" },
      {
        "transform": "typescript-transform-paths",
        "afterDeclarations": true
      }
    ]
  }
}
